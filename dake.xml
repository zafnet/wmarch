<?xml version="1.0" encoding="UTF-8"?>

<style-scheme id="dake" _name="dake" version="1.0">

  <author>Dakro</author>
  <_description>color obscuro agradable</_description>
    
  <!-- Palette -->
  <color name="azu"                         value="#52aef6"/>
  <color name="ver"                         value="#48ab58"/>
  <color name="vio1"                        value="#ad7fa8"/>
  <color name="vio2"                        value="#75507b"/>
  <color name="fux"                         value="#ff00ff"/>
  <color name="vio4"                        value="#5c3566"/>
  <color name="gree2"                       value="#888a85"/>
  <color name="gree3"                       value="#555753"/>
  <color name="gree4"                       value="#a1a49e"/>
  <color name="choco1"                      value="#e9b96e"/>
  <color name="choco2"                      value="#c17d11"/>
  <color name="choco3"                      value="#8f5902"/>
  <color name="ama"                         value="#fef48d"/>
  <color name="oran"                        value="#fe9424"/>
  <color name="redis"                       value="#ef2929"/>
  <color name="ros"                         value="#fe8db9"/>
  <color name="scar"                        value="#a40000"/>
  <color name="plat1"                       value="#d3d7cf"/>
  <color name="plat2"                       value="#babdb6"/>
  <color name="obs"                         value="#2e3436"/>
  <color name="obs2"                        value="#444444"/>
  <color name="white"                       value="#ffffff"/>
  <color name="black"                       value="#000000"/>
  

  <!-- Global Settings -->
  <style name="text"                        foreground="choco1" background="obs"/>
  <style name="selection"                   foreground="plat1"      background="gree4"/>
  <style name="cursor"                      foreground="vio1"/>
  <style name="secondary-cursor"            foreground="gree3"/>
  <style name="current-line"                background="choco1"/>
  <style name="line-numbers"                foreground="plat1" background="obs2"/>
  <style name="draw-spaces"                 foreground="redis"/>
  <style name="background-pattern"          background="white"/>

  <!-- Bracket Matching -->
  <style name="bracket-match"               foreground="scar"/>
  <style name="bracket-mismatch"            foreground="vio1" background="gree2"/>

  <!-- Right Margin -->
  <style name="right-margin"                foreground="scar" background="redis"/>

  <!-- Search Matching -->
  <style name="search-match"                foreground="choco1" background="choco2"/>

  <!-- Comments -->
  <style name="def:comment"                 foreground="plat1"/>
  <style name="def:shebang"                 foreground="fux" bold="true"/>
  <style name="def:doc-comment-element"     italic="true"/>

  <!-- Constants -->
  <style name="def:constant"                foreground="vio1"/>
  <style name="def:string"                  foreground="choco1"/>
  <style name="def:special-char"            foreground="oran"/>
  <style name="def:special-constant"        foreground="ros"/>
  <style name="def:floating-point"          foreground="ama"/>

  <!-- Identifiers -->
  <style name="def:identifier"              foreground="azu"/>

  <!-- Statements -->
  <style name="def:statement"               foreground="redis" bold="true"/>

  <!-- Types -->
  <style name="def:type"                    foreground="ver" bold="true"/>

  <!-- Markup -->
  <style name="def:emphasis"                italic="true"/>
  <style name="def:strong-emphasis"         foreground="azu" bold="true"/>
  <style name="def:inline-code"             foreground="scar"/>
  <style name="def:insertion"               underline="single"/>
  <style name="def:deletion"                strikethrough="true"/>
  <style name="def:link-text"               foreground="ros"/>
  <style name="def:link-symbol"             foreground="vio2" bold="true"/>
  <style name="def:link-destination"        italic="true" underline="single"/>
  <style name="def:heading"                 foreground="white" bold="true"/>
  <style name="def:thematic-break"          foreground="scar" bold="true"/>
  <style name="def:preformatted-section"    foreground="ver"/>
  <style name="def:list-marker"             foreground="white" bold="true"/>

  <!-- Others -->
  <style name="def:preprocessor"            foreground="white"/>
  <style name="def:error"                   foreground="plat1" background="redis" bold="true"/>
  <style name="def:warning"                 foreground="redis" background="plat1"/>
  <style name="def:note"                    background="ora" foreground="ama" bold="true"/>
  <style name="def:net-address"             italic="true" underline="single"/>

  <!-- Heading styles, uncomment to enable -->
  <!--
  <style name="def:heading0"                scale="5.0"/>
  <style name="def:heading1"                scale="2.5"/>
  <style name="def:heading2"                scale="2.0"/>
  <style name="def:heading3"                scale="1.7"/>
  <style name="def:heading4"                scale="1.5"/>
  <style name="def:heading5"                scale="1.3"/>
  <style name="def:heading6"                scale="1.2"/>
  -->

  <!-- Language specific -->
  <style name="diff:added-line"             foreground="ver"/>
  <style name="diff:removed-line"           foreground="redis"/>
  <style name="diff:changed-line"           foreground="ama"/>
  <style name="diff:diff-file"              foreground="azu" bold="true"/>
  <style name="diff:location"               foreground="ora"/>
  <style name="diff:special-case"           foreground="scar" bold="true"/>

  <style name="latex:command"               foreground="ros" bold="true"/>
  <style name="latex:include"               use-style="def:preprocessor"/>

</style-scheme>
