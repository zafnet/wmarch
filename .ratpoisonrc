#-- Cambio Prefix De C-t a Super_L
# unbind C-t
escape Super_L

#-- Crear 5 Espacios De Trabajo
exec rpws init 5 -k

#-- Cambiar De Espacio De Trabajo
bind 1 exec rpws 1
bind 2 exec rpws 2
bind 3 exec rpws 3
bind 4 exec rpws 4
bind 5 exec rpws 5

#-- Auto Encendido

#- 1.Wallpaper 2.Transparencia 3.Resolucion De Pantalla
#- 4.Teclado Diseño Español 5.Tecla Mayus x Escape

exec /usr/bin/feh --bg-fill --randomize --no-fehbg /home/$USER/.wall/* &
#bash /home/$USER/.local/wallrandom.sh & 

exec /usr/bin/picom &

#exec /usr/bin/xrandr -s 1600x900

exec setxkbmap -v es
exec setxkbmap -option "caps:swapescape"

#- 1.Recargar Ratpoison 2.Sale De Ratpoison 3.Cerrar Ventana Actual
#- 4.Desactivar el mensaje de inicio 5.Ajustar Tamaño De Los Nodos

bind r restart
bind t quit
bind q kill
startup_message off
#bind s resize

#-- Direccion Del Enfoque Al Nodo
bind k focusup
bind j focusdown
bind h focusleft
bind l focusright

#-- Mover Ventanas arriba abajo izquierda derecha
bind J exchangedown
bind H exchangeleft
bind K exchangeup
bind L exchangeright

#-- POPUP De Calendario y Hora
bind d exec ratpoison -d :0.0 -c "echo `date +'%r - %A %n    %D - %B'`  `cal | tail -n +2 | sed -e 's/^Su/\n\n Su/' -e 's/.*/ & /' -e \"s/\ $(date +%e)\ /\/\"`"

#-- Lanzando Aplicaciones 
bind c exec /usr/bin/xterm
bind a exec /usr/bin/pcmanfm
bind x exec /usr/bin/rofi -show drun
bind f exec /usr/bin/firefox
bind b exec xterm -e /usr/bin/ranger

#- Lanza Prefix y :
bind p colon

#-- Dividir Los Marcos 
bind V vsplit
bind v hsplit

#-- Elimina Split  Deja Marco Actual En FullScreen 
bind o only

#-- Opciones Para El Recuadro
#set winname title
#set winfmt %n %s %t
set fgcolor #ef891e
set bgcolor #282A36
#set font "agave Nerd Fonts:size=12"
#set winliststyle column
#set inputwidth 400
#set waitcursor 1
#set padding 0 20 0 0
#set barpadding 1 1
set barborder 1
#set wingravity center 
#set transgravity center
#- Recuadro en el medio de la pantalla
set bargravity center

#-- 1.Color Para Los Bordes De La Ventana 2.Tamaño De Borde 
set fwcolor #00FF00
set bwcolor #282A36
set border 1

#-- Define Teclas Para Que No Tenga Que Presionar La Tecla Maestra
#-- En Este Caso ctrl + Letras Ajusta El Tamaño Del Marco

definekey top C-h resize 20 0 
definekey top C-l resize -20 0 
definekey top C-k resize 0 20
definekey top C-j resize 0 -20
