# Deshabilitando teclas nativas para usar las custom
unbind -f common x
unbind -f common p
unbind -f common d
unbind -f common n
unbind -f common b
unbind -f common enter 
unbind -f common q
unbind -f common s
unbind -f common L
unbind -f common <
unbind -f common >
unbind -f browser A
unbind -f common tab

# Reproductor
bind -f common p win-activate 
bind -f common P player-play
bind -f common v player-pause 
bind -f common x player-stop 
bind -f common n player-next 
bind -f common b player-prev 
bind -f common s search-start
bind -f common space win-next
unbind -f common r

# Comandos
bind -f common q quit 
#bind common quit -i

# Volumen
#bind common - vol +1% +0
#bind common + vol +0 +1%

# Adelanto
bind common > seek -5
bind common < seek +5

