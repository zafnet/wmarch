# Opciones de fuentes
font-family =JetbrainsMono Nerd Font 
font-family-bold = 
font-family-italic = 
font-family-bold-italic = 
font-size = 12

# Estilo de fuentes
font-style = default
font-style-bold = default
font-style-italic = default
font-style-bold-italic = default
 
# Caracteristica de fuente Para que acepte ligaturas
font-feature = -liga

# asegura que los caracteres complejos (como emojis y caracteres asiáticos) sean
# interpretados y alineados correctamente con su ancho real, lo que mejora la
# visualización y evita que los caracteres de ancho variable desajusten la terminal
grapheme-width-method = unicode

theme = 
background = #262626
foreground = #ffffff
selection-foreground = #2c2c2c
selection-background = #73c6b6
selection-invert-fg-bg = false

# Valor recomendado 1 o 1.1 o 3 o 
minimum-contrast = 1

# Opciones de cursor
cursor-color = #e76cf5
cursor-invert-fg-bg = false
cursor-opacity = 1
cursor-style = block
cursor-style-blink = true  
# The color of the text under the cursor
cursor-text = #1e35c9
cursor-click-to-move = true

# Opciones de raton
mouse-hide-while-typing = true
# true  false always never
mouse-shift-capture = always 
mouse-scroll-multiplier = 2

# Opacidad de fondo de terminal
background-opacity = 0.9
background-blur-radius = 0
# Opacidad de Division de terminal Desenfocada
unfocused-split-opacity = 0.4
unfocused-split-fill = 

# Opciones de comandos
command = zsh
initial-command = 
wait-after-command = false
abnormal-command-exit-runtime = 250

# Opcion de scrollback en la terminal
scrollback-limit = 10000000

fullscreen = false
title = 
class =
x11-instance-name = 

# El valor de este parámetro debe ser un valor absoluto o uno de los valores especiales que se muestran a continuación:
# * `home` - El directorio de inicio del usuario que realiza la ejecución.
# * `inherit` - El directorio de trabajo del proceso de ejecución.
working-directory = 

# Combinaciones de teclas

# Desvincular combinaciones de teclas en mi caso las nativas
keybind = ctrl+shift+e=ignore
keybind = ctrl+shift+o=ignore

# Abrir config
# keybind = global:unconsumed:ctrl+shift+s=open_config

# Recargar config
keybind = global:unconsumed:ctrl+shift+r=reload_config

# Crear nuevo panel
keybind = alt+shift+d=new_split:down
keybind = alt+shift+r=new_split:right
keybind = alt+shift+e=new_split:left
keybind = alt+shift+u=new_split:up

# Cerrar Panel enfocado
keybind = ctrl+q=close_surface

# Ir a determinado panel
keybind = shift+alt+k=goto_split:top
keybind = shift+alt+j=goto_split:bottom
keybind = shift+alt+h=goto_split:left
keybind = shift+alt+l=goto_split:right

# Ir panel siguiente o anterior
keybind = ctrl+right_bracket=goto_split:next
keybind = ctrl+left_bracket=goto_split:previous

# Tamaño de paneles
keybind = super+ctrl+k=resize_split:up,10
keybind = super+ctrl+h=resize_split:left,10
keybind = super+ctrl+j=resize_split:down,10
keybind = super+ctrl+l=resize_split:right,10
keybind = ctrl+zero=equalize_splits

# Para que no muestre los tamaños de los paneles cuando lo cambiamos
resize-overlay = never

# Cerrar Ventana De terminal completa con todo dentro
keybind = ctrl+shift+w=close_window

# Ispeccionar opciones
# keybind = ctrl+shift+i=inspector:toggle

# Zoom a paneles
keybind = ctrl+shift+z=toggle_split_zoom

# Opciones de copiado y pegado
keybind = ctrl+shift+v=paste_from_clipboard
keybind = ctrl+shift+c=copy_to_clipboard

# Opciones de Seleccion copiado y pegado
keybind = shift+insert=paste_from_selection
keybind = ctrl+shift+a=select_all
# Ajustar lo seleccionado cuando usamos seleccionar todo en copiado y pegado
# keybind = shift+up=adjust_selection:up
# keybind = shift+right=adjust_selection:right
# keybind = shift+down=adjust_selection:down
# keybind = shift+left=adjust_selection:left

# Incrementa o decrementa el tamaño de la Fuente
keybind = ctrl+plus=increase_font_size:1
keybind = ctrl+minus=decrease_font_size:1
keybind = ctrl+equal=reset_font_size

# Scroll en terminal
keybind = ctrl+alt+shift+k=scroll_page_up
keybind = ctrl+alt+shift+j=scroll_page_down
keybind = shift+page_up=write_scrollback_file:open
# keybind = shift+end=scroll_to_bottom
# keybind = ctrl+shift+j=write_scrollback_file:paste
# keybind = shift+home=scroll_to_top

# Valores válidos:
# auto - Determinar el tema en función de la terminal configurada "auto" es equivalente a "system"
# system - Utilizar el tema del sistema
# light - Utilizar el tema claro independientemente del tema del sistema
# dark - Utilizar el tema oscuro independientemente del tema del sistema
# ghostty - Utilizar los colores de fondo y primer plano especificados en la configuración de Ghostty.
# Esto solo es compatible con compilaciones de Linux con Adwaita y `gtk-adwaita` habilitados.
window-theme = auto

# Default is false.
focus-follows-mouse = false

# clipboard-read = allow 
# clipboard-write = allow
# clipboard-trim-trailing-spaces = true
# clipboard-paste-protection = true
# clipboard-paste-bracketed-safe = true

# Usar clipboard asi cuando selecciono ya lo envia al clipboard
# copy-on-select = clipboard
# click-repeat-interval = 0

# Para no confirmar la salida del terminal
confirm-close-surface = false

# The default value is `detect`.
shell-integration = zsh

# Available features You can also use `true` or `false`
# Example: `cursor`, `no-cursor`, `sudo`, `no-sudo`, `title`, `no-title`
shell-integration-features = 

# The default value is `16-bit`.
osc-color-report-format = 16-bit

# Si es true, ghostty solo abre una instancia
# Si es false, cada nuevo process de ghostty se lanza por separado
gtk-single-instance = false
gtk-titlebar = false
gtk-tabs-location = top

# If `true`, the bold text will use the bright color palette.
bold-is-bright = false
 
# Para que tome los iconos y colores en la barra custom en tmux
term = xterm-256color
